<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_edit_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.khvatov.alex.finishedgameslist.GameDetailActivity"
    tools:showIn="@layout/activity_game_detail">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/gameDetailNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/gameDetailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/game_edit_name" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/gameDetailPlatformLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameDetailNameLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/gameDetailPlatform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/game_edit_platform" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameDetailPlatformLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/gameDetailFinishDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/game_edit_finish_date" />

    </android.support.design.widget.TextInputLayout>
</RelativeLayout>